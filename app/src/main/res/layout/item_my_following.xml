<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                android:id="@+id/rl_root"
                android:background="@drawable/item_selecto_bottom_liner">

    <ImageView
        android:id="@+id/tv_user_icon"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="38dp"
        android:layout_height="38dp"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_user_icon"
        android:layout_marginTop="8dp"
        tools:text="这是标题啊啊啊"
        android:textColor="#111111"/>

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/tv_user_icon"
        tools:text="用户名啊"
        android:textColor="#639B70"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/tv_publish_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_alignBottom="@id/tv_username"
        android:layout_toRightOf="@id/tv_username"
        android:text="发表于"
        android:textColor="#AAAAAA"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/tv_node_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_publish_at"
        android:layout_toRightOf="@id/tv_publish_at"
        tools:text="Android"
        android:textSize="12dp"
        android:layout_marginLeft="2dp"
        android:textColor="#639B70"/>

    <TextView
        android:id="@+id/tv_review_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="222"
        android:textSize="12dp"
        android:layout_alignBottom="@id/tv_username"
        android:layout_alignParentRight="true"
        android:textColor="#AAAAAA"
        tools:textSize="12dp"/>

    <ImageView
        android:layout_toLeftOf="@id/tv_review_count"
        android:layout_width="12dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="2dp"
        android:tint="#AAAAAA"
        android:src="@drawable/ic_chat_black_24dp"
        android:layout_alignBottom="@id/tv_review_count"
        android:layout_height="12dp"/>

</RelativeLayout>